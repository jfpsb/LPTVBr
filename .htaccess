#Alternate default index page
DirectoryIndex lptvbr.php?pagina=index

RewriteEngine on

#colocando barra no final do url
RewriteRule ^musicas$ /musicas/ [R=301]
RewriteRule ^videos$ /videos/ [R=301]
RewriteRule ^lptv?$ /lptv/ [R=301]
RewriteRule ^linkin-logs?$ /linkin-logs/ [R=301]
RewriteRule ^entrevista?$ /entrevista/ [R=301,NC,L]
RewriteRule ^lpu/([a-z-0-9-]+)?$ /lpu/$1/ [R=301]
RewriteRule ^singles/([a-z-0-9-]+)?$ /singles/$1/ [R=301]
RewriteRule ^albuns/([a-z-0-9-]+)?$ /albuns/$1/ [R=301]
RewriteRule ^remixes/([a-z-0-9-]+)?$ /remixes/$1/ [R=301]


#videos
#colocando barra no final do url
RewriteRule ^videos/?$ lptvbr.php?raiz=videos&pagina=videos [NC,L]
RewriteRule ^lptv/?$ videos/release-template.php?raiz=lptv&pagina=lptv [NC,L]
RewriteRule ^lptv/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ videos/videos-template.php?ano=$1&video=$2&tipo=lptv [NC,L]
RewriteRule ^shows/?$ videos/release-template.php?raiz=shows&pagina=shows [NC,L]
RewriteRule ^shows/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ videos/videos-template.php?ano=$1&video=$2&tipo=shows [NC,L]
RewriteRule ^entrevista/?$ videos/release-template.php?raiz=entrevista&pagina=entrevista [NC,L]
RewriteRule ^entrevista/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ videos/videos-template.php?ano=$1&video=$2&tipo=entrevista [NC,L]
RewriteRule ^linkin-logs/?$ videos/release-template.php?raiz=linkin-logs&pagina=linkin-logs [NC,L]
RewriteRule ^linkin-logs/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ videos/videos-template.php?ano=$1&video=$2&tipo=linkin-logs [NC,L]
RewriteRule ^outros/?$ videos/release-template.php?raiz=outros&pagina=outros [NC,L]
RewriteRule ^outros/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ videos/videos-template.php?ano=$1&video=$2&tipo=outros [NC,L]

#musicas
RewriteRule ^musicas/?$ lptvbr.php?raiz=musicas&pagina=musicas [NC,L]
RewriteRule ^albuns/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ musicas/traducao-template.php?album=$1&musica=$2&tipo=albuns [NC,L]
RewriteRule ^albuns/([a-z-0-9-]+)/?$ musicas/release-template.php?raiz=albuns&album=$1 [NC,L]
RewriteRule ^lpu/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ musicas/traducao-template.php?album=$1&musica=$2&tipo=lpu [NC,L]
RewriteRule ^lpu/([a-z-0-9-]+)/?$ musicas/release-template.php?raiz=lpu&album=$1 [NC,L]
RewriteRule ^singles/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ musicas/traducao-template.php?album=$1&musica=$2&tipo=singles [NC,L]
RewriteRule ^singles/([a-z-0-9-]+)/?$ musicas/release-template.php?raiz=singles&album=$1 [NC,L]
RewriteRule ^remixes/([a-z-0-9-]+)/([a-z-0-9-]+)/?$ musicas/traducao-template.php?album=$1&musica=$2&tipo=remixes [NC,L]
RewriteRule ^remixes/([a-z-0-9-]+)/?$ musicas/release-template.php?raiz=remixes&album=$1 [NC,L]

#outros
RewriteRule ^redes-sociais/?$ lptvbr.php?pagina=redes-sociais [NC,L]
RewriteRule ^sobre/?$ lptvbr.php?pagina=sobre [NC,L]

